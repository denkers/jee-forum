<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.kyleruss.jforum.database.models.Posts" table="posts" catalog="jforum" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <many-to-one name="threads" class="com.kyleruss.jforum.database.models.Threads" fetch="select">
            <column name="thread_id" not-null="true" />
        </many-to-one>
        <many-to-one name="users" class="com.kyleruss.jforum.database.models.Users" fetch="select">
            <column name="posted_by" length="16" not-null="true" />
        </many-to-one>
        <property name="postedDate" type="timestamp">
            <column name="posted_date" length="19" />
        </property>
        <property name="content" type="string">
            <column name="content" length="1500" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
