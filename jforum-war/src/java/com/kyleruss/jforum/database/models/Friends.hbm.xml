<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.kyleruss.jforum.database.models.Friends" table="friends" catalog="jforum" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <many-to-one name="usersByFriendB" class="com.kyleruss.jforum.database.models.Users" fetch="select">
            <column name="friend_b" length="16" not-null="true" />
        </many-to-one>
        <many-to-one name="usersByFriendA" class="com.kyleruss.jforum.database.models.Users" fetch="select">
            <column name="friend_a" length="16" not-null="true" />
        </many-to-one>
        <property name="friendshipDate" type="timestamp">
            <column name="friendship_date" length="19" />
        </property>
    </class>
</hibernate-mapping>
