<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.kyleruss.jforum.database.models.Sections" table="sections" catalog="jforum" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="25" />
        </property>
        <property name="description" type="string">
            <column name="description" length="45" />
        </property>
        <set name="categorieses" table="categories" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="section_id" not-null="true" />
            </key>
            <one-to-many class="com.kyleruss.jforum.database.models.Categories" />
        </set>
    </class>
</hibernate-mapping>
