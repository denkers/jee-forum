<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.kyleruss.jforum.database.models.Categories" table="categories" catalog="jforum" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <many-to-one name="sections" class="com.kyleruss.jforum.database.models.Sections" fetch="select">
            <column name="section_id" not-null="true" />
        </many-to-one>
        <property name="name" type="string">
            <column name="name" length="25" />
        </property>
        <property name="description" type="string">
            <column name="description" length="40" />
        </property>
        <set name="threadses" table="threads" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="category_id" not-null="true" />
            </key>
            <one-to-many class="com.kyleruss.jforum.database.models.Threads" />
        </set>
    </class>
</hibernate-mapping>
